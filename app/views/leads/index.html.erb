<div id="app">
  <section class="charts">
    <div class="container-fluid">
      <header>
        <h1 class="h3">All Leads</h1>
      </header>
      <div class="row">
<!--         <%= form_tag('/leads', method: :get) do %>
          <%= text_field_tag :search %>
        <% end %> -->
        Search Term: <input v-model="searchTermFilter" list="names">
            <datalist id="names">
              <option v-for="lead in leads">{{ lead.first_name }}</option>
              <option v-for="lead in leads">{{ lead.last_name }}</option>
              <option v-for="lead in leads">{{ lead.email_name }}</option>
            </datalist>
      </div>

      <div class="row">
        <div class="table-responsive leads-table">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Created</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Appointment Date</th>
                <th>Call Converter Notes</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="lead in leads">
                <td>{{ moment(lead.created_at).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.first_name }}</td>
                <td>{{ lead.last_name }}</td>
                <td><a v-bind:href="'/leads/' + lead.id + '/edit'">{{ lead.email }}</a></td>
                <td>{{ lead.phone }}</td>
                <td>{{ moment(lead.appointment_date).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.notes }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>
